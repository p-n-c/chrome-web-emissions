{
  "manifest_version": 3,
  "name": "Chrome Emissions Extension",
  "version": "0.0.0.1",
  "permissions": [
    "activeTab",
    "sidePanel",
    "webRequest",
    "webNavigation",
    "scripting",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content_scripts/emissions.js",
        "content_scripts/emissions-script.js"
      ]
    }
  ],
  "action": {},
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "side_panel/side-panel.html"
  }
}
