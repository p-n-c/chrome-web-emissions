{
  "manifest_version": 3,
  "name": "chrome-emissions-ext",
  "version": "0.0.0.1",
  "permissions": [
    "activeTab",
    "sidePanel",
    "webRequest",
    "webNavigation",
    "scripting",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["emissions.js", "emissions-script.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {},
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "side-panel.html"
  }
}
